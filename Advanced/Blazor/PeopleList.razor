<table class="table table-sm table-bordered table-striped">
    <thead>
        <tr>
            <th>№</th>
            <th>Имя</th>
            <th>Отдел</th>
            <th>Локация</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Persons)
        {
            <tr class="@GetClass(p.Location.City)">
                <td>@p.PersonId</td>
                <td>@p.SurName, @p.FirstName</td>
                <td>@p.Department.Name</td>
                <td>@p.Location.City, @p.Location.State</td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <label for="selectedCity">Город</label>
    <select name="selectedCity" class="form-control" @bind="SelectedCity">
        <option disabled selected>Выбери город</option>
        @foreach (var city in Cities)
        {
            <option value="@city" selected="@(city == SelectedCity)">@city</option>
        }
    </select>
</div>

@code {
    [Inject]
    public DataContext Context { get; set; }

    public IEnumerable<Person> Persons => Context.Persons.Include(p => p.Department).Include(p => p.Location);

    public IEnumerable<string> Cities => Context.Locations.Select(l => l.City);
    public string SelectedCity { get; set; }

    public string GetClass(string city) =>
        SelectedCity == city ? "bg-info text-white" : "";

}
