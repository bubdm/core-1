<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="Простой тестовый клиент" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="ButtonUpdate" Content="Обновить список данных" Margin="5" Click="ButtonUpdate_Click"
                />
        <ListBox Grid.Row="1" Name="ListBoxItems" Margin="5">
        </ListBox>
        <Button Grid.Row="2" Name="ButtonAdd" Content="Добавить" Margin="5" Click="ButtonAdd_Click"/>
        <Button Grid.Row="3" Name="ButtonDelete" Content="Удалить" Margin="5" Click="ButtonDelete_OnClick"/>


    </Grid>
</Window>
