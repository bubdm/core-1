@using Microsoft.Extensions.Logging.EventSource
@model WebApplication1.Domain.WebModel.EditProductWebModel
@{
    ViewBag.Title = "Редактирование товара";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    
    <h4>Товар</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Product" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="Id"/>
                
                <input type="hidden" asp-for="ImageUrl" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Order" class="control-label"></label>
                    <input asp-for="Order" class="form-control"/>
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input type="file" name="uploadedFile" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <img src="~/images/home/@Model.ImageUrl" alt="@Model.ImageUrl" width="500" />
                </div>
                
               
                <div class="form-group">
                    <label asp-for="SectionId" class="control-label"></label>
                    <select asp-for="SectionId" asp-items="ViewBag.Sections" class="form-control"></select>
                    <span asp-validation-for="SectionId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BrandId" class="control-label"></label>
                    <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-control"></select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Keywords" class="control-label"></label>
                    <select asp-for="Keywords" asp-items="ViewBag.Keywords" class="form-control"></select>
                    <span asp-validation-for="Keywords" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button asp-controller="Product" asp-action="Edit">Сохранить</button>
                </div>
            </form>
            
            <div class="row">
                <p>Загрузка фотографии товара:</p>
            </div>
        </div>
    </div>
    
    <div>
        <a asp-action="Index" class="btn btn-default">Назад к списку</a>
    </div>
</div>