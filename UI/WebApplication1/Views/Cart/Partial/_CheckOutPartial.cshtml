@model WebApplication1.Domain.WebModel.OrderWebModel


<div class="row">
    <form asp-action="CheckOut" asp-antiforgery="true">
        <div class="col-sm-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="sr-only"></label>
                <input asp-for="Name" class="form-control" placeholder="Имя" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="sr-only"></label>
                <input asp-for="Phone" class="form-control" placeholder="Телефон" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="sr-only"></label>
                <input asp-for="Address" class="form-control" placeholder="Адрес" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="col-sm-6">
            @{ ViewData.TryGetValue("TotalPrice", out var totalPrice); }
            @if (totalPrice is decimal price and > 0)
            {
            <div class="total_area">
                <ul>
                    <li>Подитог <span>$59</span></li>
                    <li>Эко-сбор <span>$2</span></li>
                    <li>Итого <span>@price.ToString("C")</span></li>
                    <li>Стоимость доставки <span>Free</span></li>
                </ul>
                <a class="btn btn-default update" href="">Обновить</a>
                <input type="submit" class="btn btn-default check_out" value="Оформить заказ"/>
            </div>
            }
        </div>
    </form>
</div>

