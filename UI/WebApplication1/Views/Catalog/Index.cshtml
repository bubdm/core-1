@model WebApplication1.Domain.WebModel.CatalogWebModel

@{
    ViewBag.Title = "Каталог товаров";
}

<section>
    <div class="container">

        <vc:bread-crumbs/>

        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSidebarPartial"/>
            </div>

            <div class="col-sm-9 padding-right">
                <div id="catalog-items-container">
                    <partial name="Partial/_ProductsPartial" model="Model.Products"/>
                </div>

                <div id="catalog-pagination-container">
                    @*<page-link page-model="Model.PageWebModel"
                               page-action="Index"
                               page-url-BrandId="@Model.BrandId"
                               page-url-SectionId="@Model.SectionId"
                               page-url-PageSize="@Context.Request.Query["PageSize"]"></page-link>*@
                    <partial name="Partial/_CatalogPaginationPartial" model="Model"/>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script src="js/Catalog/catalog-logic.js" asp-append-version="true"></script>
    <script>
        $(function () {
            Catalog.init({
                getViewLink: "@Url.Action("GetFeaturedItems","Catalog")",
                getCatalogPagination: "@Url.Action("GetCatalogPagination", "Catalog")"
            });
        })
    </script>
}
