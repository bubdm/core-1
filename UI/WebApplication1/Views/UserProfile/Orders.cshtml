@model IEnumerable<WebApplication1.Domain.ViewModel.UserOrderViewModel>
@{
    ViewBag.Title = "Заказы пользователя";
    Layout = "_UserProfileLayout";
}

<table class="table">
    <thead>
    <tr>
        <th>№</th>
        <th>Имя</th>
        <th>Адрес</th>
        <th>Телефон</th>
        <th>Количество</th>
        <th>Сумма</th>
    </tr>
    </thead>
    <tbody>
    @{ var i = 1; }
    @foreach (var order in Model)
    {
        <tr>
            <td>@(i++)</td>
            <td>@order.Name</td>
            <td>@order.Address</td>
            <td>@order.Phone</td>
            <td>@order.Count</td>
            <td>@order.TotalPrice</td>
        </tr>
    }
    </tbody>
</table>