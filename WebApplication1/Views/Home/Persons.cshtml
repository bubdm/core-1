@model IEnumerable<WebApplication1.Models.Person>

@{
    ViewBag.Title = "Сотрудники";
}

<div class="container">
    <h1>Сотрудники магазина</h1>
    <hr />
    <a asp-controller="Home" asp-action="Index">На главную</a>
    <hr />
    <table class="table">
        <thead>
        <tr>
            <th>№</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.LastName</td>
                <td>@person.FirstName</td>
                <td>@person.Patronymic</td>
                <td>@person.Age</td>
                @*<td>@Html.ActionLink("Детали","Details", new {Id = person.Id})</td>*@
                <td><a asp-controller="Home" asp-action="Details" asp-route-id="@person.Id">Детально</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>

